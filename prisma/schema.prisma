// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Channels {
  logs         String?
  modLogs      String?
  adminLogs    String?
  funnies      String?
  verification String?
}

type Roles {
  mods     String[] @default([])
  verified String?
}

type Messages {
  verification String
}

type Emojis {
  funnieUpvote       String @default("⭐")
  funnieModUpvote    String @default("✨")
  verificationButton String @default("✅")
}

type Features {
  scales       Boolean @default(true)
  logging      Boolean @default(true)
  modLogging   Boolean @default(true)
  adminLogging Boolean @default(true)
  moderation   Boolean @default(true)
  funnies      Boolean @default(true)
}

model Guild {
  id         String   @id @map("_id") @db.String
  channelIds Channels
  roleIds    Roles
  messageIds Messages
  emojis     Emojis
  features   Features
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("guilds")
}

model User {
  id             String   @id @map("_id") @db.String
  scales         Int      @default(0)
  banned         Boolean  @default(false)
  enablePayments Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("users")
}

model Log {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  guildId        String
  targetId       String
  moderatorId    String
  logId          Int
  reason         String
  type           Int
  embedMessageId String
  undoBy         DateTime?
  undone         Boolean?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@map("logs")
}

model Funnie {
  id             String   @id @map("_id") @db.String
  guildId        String
  channelId      String
  embedMessageId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("funnies")
}
